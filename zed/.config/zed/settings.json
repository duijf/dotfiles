// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet"
    }
  },
  "theme": "Nord",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "ui_font_family": "Monoid HalfTight",
  "buffer_font_size": 13,
  "buffer_font_family": "Monoid HalfTight",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true,
      "delay_ms": 500,
      "min_column": 60
    }
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": true,
      "platform": true
    }
  },
  "wrap_guides": [80, 110],
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["-c", "tmux new-session -A -s \"zed-$(basename \"$PWD\")\""],
        "title_override": "tmux"
      }
    }
  },
  "project_panel": {
    "auto_reveal_entries": true
  },
  "file_types": {
    "bash": ["sh", "envrc"]
  },
  "languages": {
    "Dockerfile": {
      "format_on_save": "off"
    },
    "Elixir": {
      "language_servers": ["elixir-ls"],
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    },
    "Nix": {
      "language_servers": ["!nixd", "nil"]
    },
    "Starlark": {
      "language_servers": ["!starpls", "buck2-lsp"]
    },
    "TypeScript": {
      "format_on_save": "off"
    }
  },
  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.classpath",
    "**/.git",
    "**/.hg",
    "**/.jj",
    "**/.settings",
    "**/.svn",
    "**/CVS",
    "**/Thumbs.db",
    ".claude",
    ".direnv",
    ".elixir_ls",
    ".mypy_cache",
    ".ruff_cache",
    ".terraform",
    ".venv",
    "_build",
    "buck-out",
    "cover",
    "dist",
    "ignore",
    "node_modules",
    "result"
  ]
}
