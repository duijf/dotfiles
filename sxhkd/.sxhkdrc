super + Q
  pkill swm

super + Return
  urxvt

super + space
  dmenu_run

super + R
  pkill -USR1 sxhkd

super + Down
 move.sh 0 20 $(pfw)

super + Up
  move.sh 0 -20 $(pfw)

super + Right
  move.sh 20 0 $(pfw)

super + Left
  move.sh -20 0 $(pfw)

super + alt + Up
  resize.sh 0 -20 $(pfw)

super + alt + Down
  resize.sh 0 20 $(pfw)

super + alt + Right
  resize.sh 20 0 $(pfw)

super + alt + Left
  resize.sh -20 0 $(pfw)

super + H
  teleport.sh 20 40 910 1004 $(pfw)

super + L
  teleport.sh 970 40 910 1004 $(pfw)

super + I
  teleport.sh 20 40 1860 1004 $(pfw)

super + f
  fullscreen.sh $(pfw)

super + !button{1,3}
  {wmv, wrs} -a %1 %1 $(pfw)

XF86MonBrightnessUp
  xbacklight -inc 10

XF86MonBrightnessDown
  xbacklight -dec 10

super + n
  focus.sh next

# add window to a group
super + shift + {1,2,3,4,5}
    groaw -d all; \
    groaw -a {1,2,3,4,5}

# toggle groups' visibility
super + {1,2,3,4,5}
    groaw -t {1,2,3,4,5}

# remove window from all groups
super + Backspace
    groaw -d all
