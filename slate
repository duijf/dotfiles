############
# Settings #
############

# Bindings that refer to a specific screen will
# default to the current screen if the specific
# screen is not available.
config defaultToCurrentScreen true
# Show icons with window hints.
config windowHintsShowIcons true
# Show hints for windows on the background.
config windowHintsIgnoreHiddenWindows false
config windowHintsBackgroundColor 96;96;64;0.5
# Add a shadow to the hints for readability.
config windowHintsSpread true

###########################
# Window Movement aliases #
###########################

# These aliases will be used in the binding
# section, they don't get enabled by themselves.

# Move commands take a starting point where a
# window should start, and the size the window
# should have. There are no spaces allowed
# between operators and separators.

alias padding 30

alias full          move screenOriginX+${padding};screenOriginY+${padding}                      screenSizeX-${padding}*2;screenSizeY-${padding}*2
alias lefthalf      move screenOriginX+${padding};screenOriginY+${padding}                      screenSizeX/2-${padding}*1.5;screenSizeY-${padding}*2
alias righthalf     move screenOriginX+screenSizeX/2+${padding}*0.5;screenOriginY+${padding}    screenSizeX/2-${padding}*1.5;screenSizeY-${padding}*2

#
# Hyper key alias
#

alias hyper ctrl;cmd;shift;alt

############################
# Window Movement bindings #
############################

bind e:cmd hint ASDFGHJKLQWERTYUIOPCVBN

bind i:${hyper} ${full}

bind h:${hyper} ${lefthalf}
bind l:${hyper} ${righthalf}
