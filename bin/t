#!/usr/bin/env python
import pathlib


def print_todos():
    todo_dir = pathlib.Path.home() / "todo"
    for entry in todo_dir.iterdir():
        print(entry)

        if not entry.is_file():
            continue

        with entry.open(mode="r") as f:
            lines = f.readlines()

        lines.sort()

        for todo in lines:
            if todo.startswith("x "):
                continue

            print(todo, end="")


if __name__ == "__main__":
    print_todos()
